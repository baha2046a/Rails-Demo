<%= form_with(model: user, local: true) do |form| %>
  <%= render 'shared/error_messages', model: form.object %>
  
  <div class="row mb-3">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  
  <div class="row mb-3">
    <%= form.label :email, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :email, class: 'form-control' %>
    </div>
  </div>
  
  <div class="row mb-3">
    <%= form.label :password, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :password, class: 'form-control' %>
    </div>
  </div>
  
  <div class="row mb-3">
    <%= form.label :password_confirmation, class: 'col-sm-2 col-form-label col-form-label-sm' %>
    <div class="col-sm-10">
      <%= form.text_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <div class="d-grid gap-2 col-6 mx-auto">
    <%= form.submit @buttonText, class: "btn btn-primary active", type: "button" %>
  </div>
<% end %>
