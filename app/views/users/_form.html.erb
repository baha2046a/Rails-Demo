<%= form_with(model: user, local: true) do |form| %>
  <%= render 'shared/error_messages', model: form.object %>
  
  <%= form.label :name, class: 'col-sm-2 col-form-label' %>
  <%= form.text_field :name, class: 'form-control' %>

  <%= form.label :email, class: 'col-sm-2 col-form-label' %>
  <%= form.text_field :email, class: 'form-control' %>

  <%= form.label :password, class: 'col-sm-2 col-form-label' %>
  <%= form.password_field :password, class: 'form-control' %>

  <%= form.label :password_confirmation, class: 'col-sm-2 col-form-label col-form-label-sm' %>
  <%= form.password_field :password_confirmation, class: 'form-control' %>

  <%= form.submit @buttonText, class: "btn btn-primary active" %>
 
<% end %>
